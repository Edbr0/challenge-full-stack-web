generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    Int?
}

model Role {
  id        Int      @id @default(autoincrement())
  name      String   
  users     User[]
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  ra        String   @unique
  cpf       String
}